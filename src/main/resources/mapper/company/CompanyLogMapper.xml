<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.coolplay.company.company.dao.CompanyLogMapper">

    <resultMap id="CompanyLog" type="com.coolplay.company.company.model.CompanyLogModel">
        <result property="id" column="id"/>
        <result property="companyId" column="company_id"/>
		<result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="ip" column="ip"/>
        <result property="ctime" column="c_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,company_id, user_id,user_name ,ip ,c_time
	    ]]>
	</sql>

	<sql id="findWhere">
	    <where>
			<if test="userName != null">
				AND user_name = #{userName}
			</if>
			<if test="ip != null">
				AND ip = #{ip}
			</if>
	    </where>
	</sql>

	
	<select id="find" resultMap="CompanyLog">
	    SELECT <include refid="columns"/> FROM d_company_log 
		<include refid="findWhere"/>
    </select>

	
</mapper>

