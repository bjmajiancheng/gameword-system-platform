<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.coolplay.company.company.dao.CompanyIndustryMapper">

    <resultMap id="CompanyIndustry" type="com.coolplay.company.company.model.CompanyIndustryModel">
        <result property="id" column="id"/>
        <result property="industryId" column="industry_id"/>
        <result property="companyId" column="company_id"/>
        <result property="ctime" column="c_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,industry_id ,company_id ,c_time 
	    ]]>
	</sql>

	<sql id="findWhere">
	    <where>
			<if test="companyId != null">
				AND company_id = #{companyId}
			</if>
	    </where>
	</sql>

	
	<select id="find" resultMap="CompanyIndustry">
	    SELECT <include refid="columns"/> FROM d_company_industry 
		<include refid="findWhere"/>
    </select>

	<select id="findById" resultMap="CompanyIndustry" >
	SELECT <include refid="columns"/>
	<![CDATA[
	        FROM d_company_industry
	        WHERE
		        id = #{id} 
	    ]]>
	</select>

	<delete id="delByCompanyId">
		DELETE FROM d_company_industry WHERE company_id = #{companyId}
	</delete>
	
</mapper>

