<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.coolplay.company.company.dao.CompanyDeptMapper">

    <resultMap id="CompanyDept" type="com.coolplay.company.company.model.CompanyDeptModel">
        <result property="id" column="id"/>
        <result property="companyId" column="company_id"/>
        <result property="deptName" column="dept_name"/>
        <result property="status" column="status"/>
        <result property="ctime" column="c_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,company_id ,dept_name ,status ,c_time 
	    ]]>
	</sql>

	<sql id="findWhere">
	    <where>
			<if test="deptName != null">
				AND dept_name = #{deptName}
			</if>
	    </where>
	</sql>

	
	<select id="find" resultMap="CompanyDept">
	    SELECT <include refid="columns"/> FROM d_company_dept 
		<include refid="findWhere"/>
    </select>

	<select id="findById" resultMap="CompanyDept">
		SELECT <include refid="columns"/> FROM d_company_dept WHERE id = #{id}
	</select>
	
</mapper>

